{
    "name": "jaapio/pagefind",
    "description": "PHP bindings for pagefind search library",
    "type": "php-ext",
    "require-dev": {
        "phpbench/phpbench": "^1.2"
    },
    "php-ext": {
        "build-path": "pagefind",
        "extension-name": "pagefind",
        "configure-options": [
            {
                "name": "debug",
                "description": "Build in debug mode",
                "needs-value": false
            }
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PhpPagefind\\Benchmarks\\": "benchmarks/"
        }
    },
    "scripts": {
        "benchmark": "phpbench run --report=default"
    }
}

